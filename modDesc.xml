    <multiplayer supported="true" />

    <storeItems>
        <storeItem xmlFilename="xt2.xml"/>
        <storeItem xmlFilename="xt2_autoLoader.xml"/>
    </storeItems>
    
    <extraSourceFiles>
        <sourceFile filename="scripts/events/AutoLoaderExtendedLoadObjectEvent.lua" />
